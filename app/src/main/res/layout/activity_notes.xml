<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/containerLayout"
            android:layout_width="350dp"
            android:layout_height="640dp"
            android:layout_below="@id/toolbar"
            android:layout_margin="@dimen/container_layout_margin"
            android:layout_marginStart="@dimen/container_layout_margin"
            android:layout_marginLeft="@dimen/container_layout_margin"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/container_layout_margin"
            android:layout_marginRight="@dimen/container_layout_margin">

            <TextView
                android:id="@+id/app_name"
                style="@style/LabelStyle"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="@string/app_name"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/textView4"
                android:layout_below="@+id/app_name"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="520dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout" />

        </RelativeLayout>


    </RelativeLayout>
</layout>